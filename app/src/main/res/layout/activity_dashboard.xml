<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25"
            android:orientation="horizontal">

        <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/discover_1"
                android:backgroundTint="#A8E8FFD1"
                android:backgroundTintMode="src_atop"
                android:fontFamily="@font/comfortaa_light"
                android:onClick="discoverOnClick"
                android:padding="10dp"
                android:text="Discover"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="30sp"
                android:textStyle="bold" />

        <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"

                android:background="@drawable/my_items"
                android:backgroundTint="#B4A2D6FF"
                android:backgroundTintMode="src_atop"
                android:fontFamily="@font/comfortaa_light"
                android:onClick="myItemsOnClick"
                android:padding="5dp"
                android:text="My Items"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            >

        <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/my_account_1"

                android:backgroundTint="#80EDF5A5"
                android:backgroundTintMode="src_atop"
                android:fontFamily="@font/comfortaa_light"
                android:onClick="myAccountOnClick"
                android:text="My Account"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

        <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"

                android:background="@drawable/add_item"
                android:backgroundTint="#C3D5C0FF"
                android:backgroundTintMode="src_atop"
                android:fontFamily="@font/comfortaa_light"
                android:onClick="addItemOnClick"
                android:text="Add Item"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.25"
            android:orientation="horizontal" >

        <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/my_swaps"

                android:backgroundTint="#94FFCCCC"
                android:backgroundTintMode="src_atop"
                android:fontFamily="@font/comfortaa_light"
                android:onClick="mySwapsOnClick"
                android:text="My Swaps"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />

        <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.5"

                android:background="@drawable/surprise"
                android:backgroundTint="#9FF0CDFF"
                android:backgroundTintMode="src_atop"
                android:fontFamily="@font/comfortaa_light"
                android:onClick="whateverOnClick"
                android:text="Surprise"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>